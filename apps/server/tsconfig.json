{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // Match Node.js runtime expectations
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts",
        "../../shared/audio/audio-helpers.ts"
    ],
    "exclude": [
        "**/node_modules",
        "tests",
        "**/tests",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}